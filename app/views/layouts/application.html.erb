<!DOCTYPE html>
<html>
  <head>
    <title>Sitar Blog</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="sidebar">
      <div id="logo">
        <%= link_to root_path do %>
          <%= image_tag("sitar_logo.jpg", :class => 'image-circle', :size=>'66x66') %>
        <% end %>
      </div>

    <ul>
      <li class="category">Website</li>
      <li><%= link_to "Blog", root_path %></li>
      <li><a href="https://www.sitarbug.com">Sitar Bug</a></li>
      <li><%= image_tag("VK_family_pics.jpg", :class => 'image_style', :size=>'180x280') %></li>
    </ul>

    <br>
    <ul>
      <li class="category">Social</li>
      <li><a href="https://facebook.com/saraswatimusic">Facebook</a></li>
      <li><a href="http://www.twitter.com/@sitarbug">Tweeter</a></li>
      <li><a href="http://youtube.com/user/saraswatimuse">Youtube</a></li>
      <li><a href="mailto:jod_alap@yahoo.com">Email</a></li>

    </ul>

    <% if !user_signed_in? %>
      <p class="sign_in"><%= link_to "Login", new_user_session_path %></p>
    <% end %>
  </div>

  <div id="main_content">

    <div id="header">
      <p><i>Sitar</i> ~ <b>Blog</b></p>


        <div class="buttons">
          <button class="button"><%= link_to "New Post", new_post_path %></button>
          <button class="button"><%= link_to "Logout" %></button>
        </div>

    </div>

    <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert") %>
    <% end %>
    <%= yield %>
  </div>



  </body>
</html>
